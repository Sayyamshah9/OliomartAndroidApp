<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".fragments.AccountFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/accountsLinearLayoutMain_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/your_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:text="Your Account"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/account_ic__for_accounts" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Mansi Gangurde" />

    <TextView
        android:id="@+id/phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="150dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="8923921831" />

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="33dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Address Line 1 - (Home)" />

    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="33dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Address Line 2 - (Work)" />

    <TextView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="160dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="About Us" />

    <TextView
        android:id="@+id/contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="625dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Contact Us" />

    <TextView
        android:id="@+id/terms_cond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="670dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Terms and Condition" />

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="360dp"
        android:background="@color/blue"
        android:src="@drawable/edit_button1" />

    <ImageButton
        android:id="@+id/reset_button"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="360dp"
        android:background="@color/blue"
        android:src="@drawable/reset_button" />

    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="430dp"
        android:src="@drawable/logout_button" />


</FrameLayout>
